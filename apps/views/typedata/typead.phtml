<script>

    function edittype(id)
    {
        htmlobj1 = $.ajax({url: "<?= $this->url->get('typedata/edittype?typeid=') ?>" + id , async: false});
        $("#mymodel").html(htmlobj1.responseText);
    }

    function selectAll(o) {
        $("input:checkbox[name=typeid]").each(function(){
            this.checked = o.checked;
        });

        return false;
    }

    function deltype() {
        var typeid = '';
        $("input:checkbox[name=typeid]").each(function(index){
            if (this.checked) {
                typeid += this.value + ',';
            }
        });

        window.location.href = "<?= $this->url->get('typedata/deltype?typeid=') ?>" + typeid;
    }
    function cleardata() {
        var typeid = '';
        $("input:checkbox[name=typeid]").each(function(index){
            if (this.checked) {
                typeid += this.value + ',';
            }
        });

        window.location.href = "<?= $this->url->get('typedata/cleardata?typeid=') ?>" + typeid;
    }
</script>
